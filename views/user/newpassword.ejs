<%- include('../layout/header.ejs') %>

    <form action="/resetpass" method="post">
        <div class="main">
            <div class="sub">
                <h3 class="heading">New Password</h3>
                <P>Enter New Password</P>
                <div style="background-color: brown;height: 50px; margin-bottom: 20px;padding: 10px;">
                    <input class="input_reset" type="text" name="password" id="password">
                    <input class="checkbtn" type="button" >
                </div>
                <input type="hidden" name="email" value="<%=email%>">
                <button class="btn">Submit</button>
            </div>
        </div>

        <%-include('../layout/user/partials/footer.ejs')-%>