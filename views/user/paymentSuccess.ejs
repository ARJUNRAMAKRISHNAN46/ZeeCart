<%- include('../layout/header.ejs') -%>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        h1 {
            color: #28a745;
        }

        p {
            color: #333;
        }

        .icon {
            font-size: 60px;
            color: #28a745;
            margin-bottom: 20px;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            background-color: #28a745;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
        }

        .button:hover {
            background-color: #218838;
        }
    </style>
    </head>

    <body>
        <div class="container">
            <div class="icon">&#10004;</div>
            <h3>Hi <%=userData.name%>
            </h3>
            <h1>Your Order Successful</h1>
            <p>Thank you</p>

            <a href="/shop" class="btn btn-primary">Continue Shopping</a>
        </div>
    </body>

    </html>