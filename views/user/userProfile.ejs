<%-include('../layout/user/header.ejs')-%>
    <%- include('../layout/header.ejs') -%>

        <section style="background-color: #eee;">
            <div class="container py-5">
                <div class="row">
                    <div class="col">
                        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item"><a href="#">User</a></li>
                                <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card mb-4">
                            <%if(data[0]) {%>
                                <div class="card-body text-center">
                                    <div class="d-flex justify-content-center">
                                        <img src="/assets/it's me croped.png" alt="avatar" class="rounded-circle img-fluid"
                                            style="width: 150px;">
                                    </div>
                                    <h5 class="my-3">
                                        <%=data[0].name%>
                                    </h5>
                                    <p class="text-muted mb-1">
                                        <%=data[0].mobile%>
                                    </p>
                                    <p class="text-muted mb-3">
                                        <%=data[0].email%>
                                    </p>
                                    <div class="d-flex justify-content-center mb-2">
                                        <button class="btn btn-secondary mx-4" id="profileModalOpener">Edit Profile</button>
                                    </div>
                                </div>
                                <div id="profileModal"class="modal" style="width: 800px;">
                                    <form action="/updateProfile" method="post">
                                        <div class="row d-flex justify-content-center align-items-center">
                                            <div class="col-12 col-md-6 my-5"
                                                style="border: 5px solid #3c3c3c;border-radius: 15px;background-color: rgb(224, 224, 255);">
                                                <br>
                                                <!-- <span class="close" id="closeModal">&times;</span> -->
                                                <div class="d-flex bg-secondary justify-content-center align-items-center"
                                                    style="border-radius: 10px 10px 0 0 ;">
                                                    <h1 style="color: rgb(255, 255, 255);">edit Profile</h1>
                                                </div>
                                                <br>
                                                <div class="d-flex justify-content-center">
                                                    <input type="text" name="name" value="<%=data[0].name%>"
                                                        style="width: 100%;height: 35px;border-radius: 5px;padding-left: 10px;"
                                                        ></input>
                                                </div>
                                                <br>
                                                <div class="d-flex justify-content-center">
                                                    <input type="text" name="mobile" value="<%=data[0].mobile%>"
                                                        style="width: 100%;height: 35px;border-radius: 5px;padding-left: 10px;"
                                                       ></input>
                                                </div>
                                                <br>
                                                <div class="d-flex justify-content-center align-items-center">
                                                    <input name="email" value="<%=data[0].email%>"
                                                        style="width: 100%;height: 35px;border-radius: 5px;padding-left: 5px;"
                                                       ></input>
                                                </div>
                                                <br>
                                                <div class="d-flex justify-content-center">
                                                        <button class="btn btn-primary">Update</button>
                                                </div>
                                                <br>
                                            </div>
                                        </div>
                                    </form>
                                </div><%}%>
                        </div>
                        <div class="card mb-4 mb-lg-0">
                            <div class="card-body p-0 d-flex justify-content-between p-3">
                                <button class="btn btn-success " id="openModal">Add Address</button>
                                <form action="/forgotpass" method="get"><button type="submit"
                                        class="btn btn-primary">Change Password</button></form>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-body">
                                <hr>
                                <%data.forEach((x)=> {%>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Address <%=++i%>
                                            </p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">
                                                <%=x.address%>,
                                            </p>
                                            <p class="text-muted mb-0">
                                                <%=x.locality%>,
                                            </p>
                                            <p class="text-muted mb-0">
                                                <%=x.city%>,
                                            </p>
                                            <p class="text-muted mb-0">
                                                <%=x.district%>,
                                            </p>
                                            <p class="text-muted mb-0">
                                                <%=x.state%>,
                                            </p>
                                            <p class="text-muted mb-0">
                                                <%=x.pincode%>
                                            </p>
                                        </div>
                                        <div class="d-flex justify-content-end"><a
                                                class="btn btn-primary text-white mb-2"
                                                href="/geteditAddress/<%=x._id%>">Edit Address</a></div>
                                        <div class="d-flex justify-content-end"><a class="btn btn-danger text-white"
                                                onclick="return confirm('Are you sure to delete this item?')"
                                                href="/deleteAddress/<%=x._id%>">Delete Address</a></div>
                                    </div>
                                    <hr>
                                    <%})%>
                            </div>
                        </div>
                        <div class="col-lg-12 d-flex justify-content-center" style="">
                            <nav aria-label="page navigation example">
                                <ul class="pagination">
                                    <% for(i=1; i < (dataCount/2)+1; i++) {%>
                                        <li class="page-item"><a class="page-link" href="/profile?page=<%=i%>"><%=i%></a></li>
                                        <%} %>
                                </ul>
                            </nav>
                        </div>
                        <div id="myModal" class="modal">
                            <form action="/addAddress" method="post">
                                <div class="row d-flex justify-content-center align-items-center">
                                    <div class="col-12 col-md-6 my-5"
                                        style="border: 5px solid #3c3c3c;border-radius: 15px;background-color: rgb(224, 224, 255);">
                                        <br>
                                        <span class="close" id="closeModal">&times;</span>
                                        <div class="d-flex bg-secondary justify-content-center align-items-center"
                                            style="border-radius: 10px 10px 0 0 ;">
                                            <h1 style="color: rgb(255, 255, 255);">Add Address</h1>
                                        </div>
                                        <br>
                                        <input type="hidden" value="<%=userId.id%>">
                                        <div class="d-flex justify-content-center">
                                            <input type="text" name="name" placeholder="Name"
                                                style="width: 48%;height: 35px;border-radius: 5px;padding-left: 5px;margin-right: 4%;"
                                                required></input>
                                            <input type="number" name="mobile" placeholder="Mobile"
                                                style="width: 48%;height: 35px;border-radius: 5px;padding-left: 5px;"
                                                required></input>
                                        </div>
                                        <br>
                                        <div class="d-flex justify-content-center">
                                            <input type="text" name="email" placeholder="Email"
                                                style="width: 48%;height: 35px;border-radius: 5px;padding-left: 5px;margin-right: 4%;"
                                                required></input>
                                            <input type="number" name="pincode" placeholder="Pincode"
                                                style="width: 48%;height: 35px;border-radius: 5px;padding-left: 5px;"
                                                required></input>
                                        </div>
                                        <br>
                                        <div class="d-flex justify-content-center align-items-center">
                                            <input name="address" placeholder="Address"
                                                style="width: 100%;height: 100px;border-radius: 5px;padding-left: 5px;"
                                                required></input>
                                        </div>
                                        <br>
                                        <div class="d-flex justify-content-center">
                                            <input type="text" name="locality" placeholder="Locality"
                                                style="width: 48%;height: 35px;border-radius: 5px;padding-left: 5px;margin-right: 4%;"
                                                required></input>
                                            <input type="text" name="city" placeholder="City"
                                                style="width: 48%;height: 35px;border-radius: 5px;padding-left: 5px;"
                                                required></input>
                                        </div>
                                        <br>
                                        <div class="d-flex justify-content-center">
                                            <input type="text" name="district" placeholder="District"
                                                style="width: 48%;height: 35px;border-radius: 5px;padding-left: 5px;margin-right: 4%;"
                                                required></input>
                                            <input type="text" name="state" placeholder="State"
                                                style="width: 48%;height: 35px;border-radius: 5px;padding-left: 5px;"
                                                required></input>
                                        </div>
                                        <br>
                                        <div class="d-flex justify-content-center">
                                            <button type="submit" class="btn btn-secondary" style="color: white;">Add
                                                Address</button>
                                        </div>
                                        <br>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script>
            $(document).ready(function () {
                $("#profileModalOpener").click(function () {
                    $("#profileModal").modal('show');
                });
            });
        </script>

        <%- include('../layout/user/footer.ejs') -%>