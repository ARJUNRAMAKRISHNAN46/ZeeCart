<%- include('../layout/header.ejs') -%>

<div class="main-navbar shadow-sm sticky-top" style="background-color: #fff;">
    <div class="top-navbar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 my-auto d-none d-sm-none d-md-block d-lg-block">
                    <h5 class="brand-name">Zee<span href="" id="zeecart">C</span>art</h5>
                </div>
                <div class="col-md-5 my-auto">
                    <form role="search">
                        <div class="input-group">
                            <input type="search" placeholder="Search your product" class="form-control" />
                            <button class="btn bg-white" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-5 my-auto">
                    <ul class="nav justify-content-end">

                        <li class="nav-item">
                            <a class="nav-link" href="/cart">
                                <i class="fa fa-shopping-cart"></i> Cart
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/wishlist">
                                <i class="fa fa-heart"></i> Wishlist
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="/profile" id="navbarDropdown">
                                <i class="fa fa-user"></i> <%=data.name%>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

    <!-- ------------------------------------------------------carousel----------------------------------------------------------------- -->

    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="assets/Banner_1.jpg" class="d-block w-100" alt="Banner1">
            </div>
            <div class="carousel-item">
                <img src="assets/Banner_2.jpg" class="d-block w-100" alt="Banner2">
            </div>
            <div class="carousel-item">
                <img src="assets/Banner_3.jpg" class="d-block w-100" alt="Banner3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-----------------------------------------------------------Product List----------------------------------------------------------------------- -->

    <div class="py-3 py-md-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h4 class="mb-4"><strong>BEST SELLING MOBILES</strong></h4>
                </div>
                <%imgs.forEach((x)=>{ %>

                    <div class="card col-6 col-md-3">
                        <img class="card-img-top" src="/product-images/<%= x.images[0] %>" alt="Card image cap">
                        <div class="card-body">
                          <h5 class="card-title"><%=x.ProductName%></h5>
                          <p class="card-text"><%=x.Specification1%></p>
                          <a href="/productspecs/<%-x._id%>" class="btn btn-primary">view Details</a>
                        </div>
                      </div>

                    <%}) %>
            </div>
        </div>
    </div>

