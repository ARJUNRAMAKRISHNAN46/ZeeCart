<%-include('../layout/user/partials/header.ejs')-%>


<div class="container">
    <div class="wrapper">
        <div class="title"><span>Sign in</span></div>
        <form action="/adminlogin" method="post">
            <div class=" loginDiv d-flex justify-content-center">
                <span><%=err%></span>
            </div>
            <div class="row">
                <i class="fa-solid fa-envelope" style="color: #ffffff;"></i>
                <input class="headz" type="email" placeholder="email" name="email" />
            </div>
            <div class="row">
                <i class="fas fa-lock"></i>
                <input type="password" placeholder="Password" name="password" id="password"/>
            </div>
            <div class="row button">
                <input type="submit" id="btnuslog" value="Login">
            </div>
        </form>
    </div>
</div>
 


<script>

    let password = document.getElementById('password');
    let eyeicon = document.getElementById('eyeicon');
    eyeicon.onclick = function(){
        if(password.type == 'password'){
            password.type = 'text';
            eyeicon.src = 'eye-open.png'
        }else{
            password.type = 'password';
            eyeicon.src = 'eye-close.png'
        }
    }

</script>

