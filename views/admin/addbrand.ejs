<%- include('../layout/header.ejs') %>

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <section style="width: 450px; height: 400px;border: 1px solid black;border-radius: 10px;">
        <form action="/brandadded" method="post">
            <div class="d-flex justify-content-center align-items-center" style="height: 100px;border-radius:10px 10px 0 0;background-color: rgb(82, 82, 82);">
                <h4 style="color: white;">Add Brand</h4>
            </div><div class="col-12 d-flex justify-content-center">
                <p id="error">
                    <%=err%>
                </p>
            </div>
            <div class="d-flex justify-content-center align-items-center" style="height: 60px;border-radius:10px 10px 0 0;">
                <h5><strong>Enter Brandname</strong></h5>
            </div>
            <div class="d-flex justify-content-center align-items-center" style="height: 40px;border-radius:10px 10px 0 0;">
                <input type="text" name="brandname" required>
            </div>
            <div class="d-flex justify-content-center align-items-center" style="height: 80px;">
                <button style="border-radius: 5px;width: 100px;height: 40px;color: white; background-color: rgb(103, 103, 103);">Add Brand</button>
            </div>
        </form>
    </section>
</div>

