<%- include('../layout/header.ejs') %>

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <section style="width: 450px; height: 300px;border: 1px solid black;border-radius: 10px;">
        <form action="/uploadbrand" method="post">
            <div class="d-flex justify-content-center align-items-center" style="height: 100px;border-radius:10px 10px 0 0;background-color: rgb(82, 82, 82);">
                <h4 style="color: white;">Edit Brand</h4>
            </div>
            <div class="d-flex justify-content-center align-items-center" style="height: 60px;border-radius:10px 10px 0 0;">
                <h5><strong>Edit Brandname</strong></h5>
            </div>
            <div class="d-flex justify-content-center align-items-center" style="height: 40px;border-radius:10px 10px 0 0;">
                <input type="text" name="brandname" value="<%=brand.brandName%>" required>
                <input type="hidden" value="<%=id%>" name="id">
            </div>
            <div class="d-flex justify-content-center align-items-center" style="height: 80px;">
                <button style="border-radius: 5px;width: 100px;height: 40px;color: white; background-color: rgb(103, 103, 103);">Edit Brand</button>
            </div>
        </form>
    </section>
</div>

<%- include('../layout/footer.ejs') %>